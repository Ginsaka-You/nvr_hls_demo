.page {
  padding: 24rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

input {
  border: 1px solid #e5e7eb;
  border-radius: 12rpx;
  padding: 12rpx;
  margin: 12rpx 0;
}

.tips {
  font-size: 26rpx;
  color: #94a3b8;
  margin-bottom: 12rpx;
}
