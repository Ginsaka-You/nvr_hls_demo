page {
  background: #f7f8fa;
}

.page {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 35, 95, 0.08);
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 12rpx;
}

.hero-card .hero-desc {
  font-size: 30rpx;
  color: #1f2933;
  line-height: 1.5;
}

.hero-meta {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.4;
}

.action-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.outline {
  background: #ffffff;
  color: #1772f6;
  border: 2rpx solid #1772f6;
}

.steps-card .step {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-top: 12rpx;
}

.step-index {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #1772f6;
  color: #ffffff;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.step-text {
  flex: 1;
  font-size: 28rpx;
  color: #0f172a;
  line-height: 1.5;
}

.status-card .status-text {
  font-size: 26rpx;
  color: #475467;
  white-space: pre-wrap;
}
