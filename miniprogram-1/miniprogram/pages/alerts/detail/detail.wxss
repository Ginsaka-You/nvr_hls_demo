.page {
  padding: 24rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.line {
  font-size: 28rpx;
  color: #4b5563;
  margin-top: 6rpx;
}

.snapshot {
  width: 100%;
  border-radius: 16rpx;
  background: #000;
}

.action-card textarea {
  width: 100%;
  min-height: 140rpx;
  border: 1px solid #e5e7eb;
  border-radius: 12rpx;
  padding: 12rpx;
  margin: 12rpx 0;
  box-sizing: border-box;
}

.placeholder {
  margin-top: 80rpx;
  text-align: center;
  color: #94a3b8;
}
