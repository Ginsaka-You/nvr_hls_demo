.page {
  padding: 24rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
}

.line {
  font-size: 28rpx;
  color: #4b5563;
  margin-bottom: 4rpx;
}

.time {
  font-size: 26rpx;
  color: #94a3b8;
}

.placeholder,
.error {
  text-align: center;
  color: #94a3b8;
  margin-top: 80rpx;
  font-size: 28rpx;
}

.error {
  color: #ef4444;
}
