.page {
  padding: 24rpx;
}

.toolbar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16rpx;
}

.subscribe-btn {
  font-size: 26rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.card-body {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.thumb {
  width: 220rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: #e5e7eb;
  object-fit: cover;
  flex-shrink: 0;
}

.info {
  flex: 1;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
}

.line {
  font-size: 28rpx;
  color: #4b5563;
  margin-bottom: 4rpx;
}

.time {
  font-size: 26rpx;
  color: #94a3b8;
}

.placeholder,
.error {
  text-align: center;
  color: #94a3b8;
  margin-top: 80rpx;
  font-size: 28rpx;
}

.error {
  color: #ef4444;
}

.severity-badge {
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #fff;
}

.badge-critical {
  background: #ef4444;
}

.badge-high {
  background: #f97316;
}

.badge-medium {
  background: #facc15;
  color: #111827;
}

.badge-low {
  background: #22c55e;
}
