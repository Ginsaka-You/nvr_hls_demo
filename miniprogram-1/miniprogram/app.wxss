.severity-badge {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
  color: #fff;
  font-size: 24rpx;
}

.badge-critical {
  background: #ef4444;
}

.badge-high {
  background: #f97316;
}

.badge-medium {
  background: #eab308;
  color: #111;
}

.badge-low {
  background: #94a3b8;
}
